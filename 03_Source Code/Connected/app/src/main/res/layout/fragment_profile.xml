<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="152dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="247dp"
        android:layout_marginBottom="600dp"
        android:spinnerMode="dropdown" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="146dp"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:layout_marginStart="261dp"
        android:layout_marginTop="-13dp"
        android:src="@drawable/appiconsupport"></ImageView>

    <EditText
        android:id="@+id/profileName"
        android:hint="Profilname"
        android:layout_marginLeft="20dp"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="310dp"
        android:layout_marginEnd="170dp"
        android:layout_marginBottom="380dp"
        android:gravity="start|top"
        android:lines="1"
        android:padding="16dp"></EditText>

    <EditText
        android:id="@+id/twitterName"
        android:hint="Twittername"
        android:layout_marginLeft="20dp"
        android:layout_width="235dp"
        android:layout_height="57dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="310dp"
        android:layout_marginEnd="170dp"
        android:layout_marginBottom="300dp"
        android:gravity="start|top"
        android:lines="1"
        android:padding="16dp"></EditText>

    <Button
        android:background="@drawable/roundedbutton"
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="125dp"
        android:layout_marginEnd="239dp"
        android:layout_marginRight="125dp"
        android:layout_marginBottom="220dp"
        android:text="Profil Speichern" />


</RelativeLayout>
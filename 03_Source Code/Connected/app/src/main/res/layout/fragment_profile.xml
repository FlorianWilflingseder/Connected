<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="131dp"
        android:layout_height="76dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="31dp"
        android:spinnerMode="dropdown"
        android:textColor="#000000" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="135dp"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:layout_marginStart="243dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/appiconsupport"></ImageView>

    <EditText
        android:id="@+id/profileName"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="310dp"
        android:layout_marginEnd="214dp"
        android:layout_marginBottom="300dp"
        android:gravity="start|top"
        android:hint="Profilname"
        android:lines="1"
        android:padding="16dp"></EditText>

    <EditText
        android:id="@+id/twitterName"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="3100dp"
        android:layout_marginEnd="214dp"
        android:layout_marginBottom="400dp"
        android:gravity="start|top"
        android:hint="Twittername"
        android:lines="1"
        android:padding="16dp"></EditText>

    <Button
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="125dp"
        android:layout_marginEnd="236dp"
        android:layout_marginRight="125dp"
        android:layout_marginBottom="165dp"
        android:background="@drawable/roundedbutton"
        android:text="Profil Speichern" />

    <Button
        android:id="@+id/button_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="125dp"
        android:layout_marginEnd="99dp"
        android:layout_marginRight="125dp"
        android:layout_marginBottom="165dp"
        android:background="@drawable/roundedbutton"
        android:text="Profil LÃ¶schen" />


</RelativeLayout>